<Window x:Class="P2P_projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="P2P Bank Node Monitor" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0" ResizeMode="CanResize">
    <Grid>
        <Border Background="White" Margin="40" CornerRadius="15" Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="5"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <Grid>
                    <TextBlock Text="BANK NODE STATUS" Foreground="#777" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Button x:Name="BtnLang" Content="EN / CZ" HorizontalAlignment="Right" Width="60" Height="25" 
                            Background="#DDD" BorderThickness="0" Click="BtnLang_Click" Cursor="Hand"/>
                </Grid>

                <Border x:Name="StatusBorder" Background="#E8F5E9" CornerRadius="20" Padding="15,5" Margin="0,10,0,30" HorizontalAlignment="Center">
                    <TextBlock x:Name="TxtStatus" Text="● STARTING..." Foreground="#2E7D32" FontSize="20" FontWeight="Bold"/>
                </Border>

                <Grid Margin="0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock x:Name="LblFunds" Text="Total Funds (USD)" Foreground="Gray" FontSize="16"/>
                        <TextBlock x:Name="TxtFunds" Text="$0" FontSize="36" FontWeight="ExtraBold" Foreground="#333" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Rectangle Grid.Column="1" Width="2" Fill="#EEE" Margin="20,0"/>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock x:Name="LblClients" Text="Active Clients" Foreground="Gray" FontSize="16"/>
                        <TextBlock x:Name="TxtClients" Text="0" FontSize="36" FontWeight="ExtraBold" Foreground="#333" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>

                <Border Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,30,0,10" HorizontalAlignment="Center">
                    <TextBlock x:Name="TxtIp" Text="IP: Detecting..." FontSize="18" Foreground="#333" FontWeight="DemiBold"/>
                </Border>

                <Button x:Name="BtnStop" Content="SAFE SHUTDOWN" Background="#D32F2F" Foreground="White" 
                        Padding="20,15" Margin="0,20,0,0" FontWeight="Bold" FontSize="16" 
                        BorderThickness="0" Cursor="Hand" HorizontalAlignment="Center" Width="220"
                        Click="BtnStop_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>